
<div class="item">
    <div>AvatarURL</div>
    <div>
        <input 
            type="url"
            name="avatar_url"
            placeholder="http://"
            value="{{ member.avatar_url }}"
        >
    </div>
    <div class="item">
        <div>Nome</div>
        <div>
            <input 
                type="text"
                name="name"
                placeholder="Nome do membro"
                value="{{member.name}}"
            >
        </div>
    </div>

    <div class="item">
        <div>Email</div>
        <div>
            <input 
                type="email"
                name="email"
                value="{{member.email}}"
            >
        </div>
    </div>

    <div class="item">
        <div>Data de Nascimento</div>
            <div>
                <input 
                    type="date" 
                    name="birth"
                    value="{{member.birth}}"
                >
        </div>
    </div>

    <div class="item">
        <div>Sexo</div>
        <div>
            <span><input 
            type="radio" 
            name="gender" 
            Value="M" 
            {%if member.gender == "M" %}
            checked
            {%endif%}>Masculino</span>
            <span><input type="radio" 
            name="gender" 
            Value="F" {%if member.gender == "F" %}
            checked
            {%endif%}>Feminino</span>
            
        </div>
    </div>

    <div class="item">
        <div>Interesses</div>
        <div>
            <input 
                type="text" 
                name="interests"
                placeholder="Separe seus interesses por virgula"
                value="{{member.interests}}"
            >
    </div>

    <div class="item">
        <div>Tipo Sangu√≠neo</div>
        <div>
            <select name="blood"> 
                <option value="A+"{%if member.blood == "A+"%}select{%endif%}>
                    A+
                </option>
                <option value="A-" {%if member.blood == "A-"%}select{%endif%}>
                    A-
                </option>
                <option value="B+"{%if member.blood == "B+"%}select{%endif%}>
                    B+
                </option>
                <option value="B-"{%if member.blood == "B-"%}select{%endif%}>
                    B-
                </option>
                <option value="AB+"{%if member.blood == "AB+"%}select{%endif%}>
                    AB+
                </option>
                <option value="AB-"{%if member.blood == "AB-"%}select{%endif%}>
                    AB-
                </option>
                <option value="O+"{%if member.blood == "O+"%}select{%endif%}>
                    O+
                </option>
                <option value="O-" {%if member.blood == "O-"%}select{%endif%}>
                    O-
                </option>
            </select>
        </div>
    </div>

     <div class="item">
        <div>Peso (kg)</div>
            <div>
                <input 
                    type="numer" 
                    name="weight"
                    value="{{member.weight}}"
                >
        </div>
    </div>

    <div class="item">
        <div>Altura (cm)</div>
            <div>
                <input 
                    type="numer" 
                    name="height"
                    value="{{member.height}}"
                >
        </div>
    </div>
    <button type="submit">Salvar</button>  
