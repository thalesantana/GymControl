{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        <a href="/instructors/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Instrutor</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {%for instructor in instructors%}
                    <tr>
                        <td class="instructor">
                            <span style="background-image: url({{instructor.avatar_url}})"></span>
                            {{instructor.name}}
                        </td>
                        
                        <td class="services">
                            {%for service in instructor.services%}
                                <span>{{service}} </span> 
                            {%endfor%}           
                        </td>
                        
                        <td><a href="/instructors/{{instructor.id}}">ver</a></td>
                    </tr>
                {%endfor%}
            </tbody>
        </table>
    </div>


{%endblock content %}